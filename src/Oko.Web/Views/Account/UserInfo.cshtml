@using System.Security.Claims
@using Oko.Web.Authorization

<h2>Uživatel</h2>

<table class="table table-bordered">
    <tr>
        <th>Celé jméno</th>
        <td>@User.FindFirst(ClaimTypes.GivenName).Value</td>
    </tr>
    <tr>
        <th>Username</th>
        <td>@User.Identity.Name</td>
    </tr>
    <tr>
        <th>UID</th>
        <td>@User.FindFirst(ClaimTypes.NameIdentifier).Value</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@User.FindFirst(ClaimTypes.Email).Value</td>
    </tr>
    
    <tr>
        <th>Aplikační role</th>
        <td>
            @foreach (var r in User.FindAll(ClaimTypes.Role))
            {
                <span>@r.Value</span><br/>
            }
        </td>
    </tr>
    
    <tr>
        <th>Zóny</th>
        <td>
            @foreach (var r in User.GetZones())
            {
                <code>@r</code><br />
            }
        </td>
    </tr>
</table>
